@model PaymentModel;

<form asp-controller="Payment" asp-action="ProcessPayment" method="post">
    <div class="form-row">
        <label asp-for="@Model.Amount">
            Credit or debit card
        </label>
        <input type="hidden" id="public-key" value="@ViewBag.publicKey" />
        <input asp-for="@Model.Amount" />
        <!-- Used to display form errors. -->
        <div id="card-errors" role="alert"></div>
    </div>

    <button type="submit" id="submit">Checkout</button>
    <div class="container">

        <div class="row">
            <div class="col-md-6">
                <img src="item-image.jpg" class="img-fluid" alt="Item Image">
            </div>
            <div class="col-md-6">
                <h2>Item Name</h2>
                <p class="text-muted">Item Description</p>
                <hr>
                <p><strong>Price:</strong> $99.99</p>
                <p><strong>Category:</strong> Electronics</p>
                <p><strong>Availability:</strong> In Stock</p>
                <hr>
                <div class="row">
                    <div class="col-md-6">
                        <label for="quantity">Quantity:</label>
                        <input type="number" id="quantity" class="form-control" value="1" min="1">
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-primary btn-block">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

