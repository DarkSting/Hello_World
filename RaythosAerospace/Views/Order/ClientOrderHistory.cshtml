@{
    Layout = "_Layout";
    ViewData["Title"] = "Raythos Aerospace - Order History";
}

@model OrderDTO

<div class="order-history-container">
    <h2 class="order-history-heading">Order History</h2>

    @if (Model.orders == null)
    {
        <div class="order-history-card">
            <div class="order-history-details">
                <span class="order-history-id">#12345</span>
                <span class="order-history-product">Aircraft Model X</span>
                <span class="order-history-date">Purchased on: Jan 15, 2023</span>
                <span class="order-history-price">Amount Paid: $1,000,000</span>
            </div>
            <button class="order-history-track-button">Track</button>
        </div>

        <div class="order-history-card">
            <div class="order-history-details">
                <span class="order-history-id">#67890</span>
                <span class="order-history-product">Aircraft Model Y</span>
                <span class="order-history-date">Purchased on: Feb 28, 2023</span>
                <span class="order-history-price">Amount Paid: $2,000,000</span>
            </div>
            <button class="order-history-track-button">Track</button>
        </div>
    }

    @foreach (OrderModel current in Model.orders)
    {
        <div class="order-history-card">
            <div class="order-history-details">
                <span class="order-history-id"><strong>Order Id : </strong>@current.OrderId</span>
                <span class="order-history-product"><strong>Products : </strong> </span>
                @foreach (ProductModel currentproduct in Model.orderdesc[current.OrderId])
                {
                    <p>@currentproduct.AirCraft.AircraftType</p>
                }
                <span class="order-history-date"><strong>Order Placement Date : </strong>@current.OrderDateTime</span>
                <span class="order-history-price"><strong>Total Price For The Order : </strong>@current.Subtotal</span>
            </div>
            <a href="/Order/OrderTracking?orderId=@current.OrderId" class="order-history-track-button">Track</a>
        </div>
    }



    <!-- Add more order cards as needed -->
</div>