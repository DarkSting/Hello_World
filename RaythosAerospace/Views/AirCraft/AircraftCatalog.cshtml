@{
    Layout = "_Layout";
    ViewData["Title"] = "Raythos Aerospace - Aircraft Catalog";

    IEnumerable<AirCraftModel> aircrafts = ViewBag.aircrafts;
    Dictionary<string, int> soldCount = ViewBag.soldCount;
}


<div class="container mt-4">
    <h2 class="display-4">Aircraft Catalog</h2>
    <p class="lead">Explore our catalog of available aircraft models.</p>


    @if (aircrafts.Count() > 0)
    {

<div class="row mt-4">
    @foreach (AirCraftModel current in aircrafts)
    {
    <div class="col-md-4">
        <div class="card catalog-card">
            <img src="~/images/aircraft-a320.jpg" class="card-img-top catalog-card-img" alt="Aircraft Model 1">
            <div class="card-body">
                <h5 class="card-title">@current.Manufacturer</h5>
                <h6 class="card-title">AirCraft Type : @current.AircraftType</h6>
                <p class="card-text">Starting from USD - @current.AirCraftPrice</p>
                @if (current.ItemCount > 0)
                {
                    <p class="card-text"><strong>Availability:</strong> In Stock</p>
                }
                else
                {
                    <p class="card-text text-danger"><strong class="text-dark">Availability:</strong> Out of Stock</p>
                }

                <p class="card-text">Color : Customizations available</p>
                <p class="card-text"><strong>Total Sold:</strong> @soldCount[current.AircraftId]</p>
                <a href="/AirCraft/AircraftPage?airCraftId=@current.AircraftId" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
    }
</div>
    }
