@{
    Layout = "_Home";
    ViewData["Title"] = "Raythos Aerospace - Login";
}

@model UserModel

<section class="container mt-4">
    <div class="login-container text-center">
        <h2 class="display-4 mb-4">Login</h2>
        <form class="login-form" asp-action="Login" method="post">
            <div class="form-group">
                <label for="loginEmail">Email</label>
                <input type="email" class="form-control custom-input login-form-input mx-auto" id="loginEmail" placeholder="Enter your email" asp-for="@Model.Email">
            </div>
            <div class="form-group">
                <label for="loginPassword">Password</label>
                <input type="password" class="form-control custom-input login-form-input mx-auto" id="loginPassword" asp-for="@Model.Password">
            </div>
            <button type="submit" class="btn btn-primary login-form-button mx-auto">Login</button>
            <p class="mt-3 do-not-have-account">
                Don't have an account yet? <a href="@Url.Action("Registration", "Home")">Click here to register</a>.
            </p>
        </form>
    </div>
</section>
