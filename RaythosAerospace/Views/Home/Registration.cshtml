@{
    Layout = "_Home";
    ViewData["Title"] = "Raythos Aerospace - Registration";
}

@model UserLoginDTO

<section class="container mt-4">
    <div class="registration-container text-center" >
        <h2 class="display-4 mb-4">Create an Account</h2>
        <form class="registration-form" asp-action="Registration" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="email">Email<span class="text-danger">*</span></label>
                    <input type="email" class="form-control registration-form-input" id="email" placeholder="Enter your email" asp-for="@Model.Credentials.Email">
                    <span asp-validation-for="@Model.Credentials.Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Credentials.Name">Full Name<span class="text-danger">*</span></label>
                    <input type="text" class="form-control registration-form-input" id="fullName" placeholder="Enter your full name" asp-for="@Model.Credentials.Name">
                    <span asp-validation-for="@Model.Credentials.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Credentials.DOB">Date Of Birth<span class="text-danger">*</span></label>
                    <input type="date" class="form-control registration-form-input" id="dob" placeholder="Enter your date of birth" asp-for="@Model.Credentials.DOB">
                    <span asp-validation-for="@Model.Credentials.DOB" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Credentials..UserId">NIC Number<span class="text-danger">*</span></label>
                    <input type="text" class="form-control registration-form-input" id="nicNumber" placeholder="Enter your NIC number" asp-for="@Model.Credentials.UserId">
                    <span asp-validation-for="@Model.Credentials.UserId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="@Model.Credentials.Address">Address<span class="text-danger">*</span></label>
                    <input type="text" class="form-control registration-form-input" id="address" placeholder="Enter your address" asp-for="@Model.Credentials.Address">
                    <span asp-validation-for="@Model.Credentials.Address" class="text-danger"></span>
                </div>
            </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Credentials.Password">Password<span class="text-danger">*</span></label>
                        <input type="password" class="form-control registration-form-input" id="password" placeholder="Enter your password" asp-for="@Model.Credentials.Password">
                        <span asp-validation-for="@Model.Credentials.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="confirmPassword">Confirm Password<span class="text-danger">*</span></label>
                        <input asp-for="@Model.ConfirmedPass" type="password" class="form-control registration-form-input" id="confirmPassword" placeholder="Confirm your password" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary registration-form-button">Create Account</button>
                <p class="already-have-account mt-3">
                    Already have an account? <a href="@Url.Action("Login", "Home")">Click here to login</a>.
                </p>
        </form>
    </div>
</section>
