@{
    Layout = "_Home";
    ViewData["Title"] = "Raythos Aerospace - Registration";
}

<section class="container mt-4">
    <div class="registration-container text-center">
        <h2 class="display-4 mb-4">Create an Account</h2>
        <form class="registration-form">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="email">Email<span class="text-danger">*</span></label>
                    <input type="email" class="form-control registration-form-input" id="email" placeholder="Enter your email" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="fullName">Full Name<span class="text-danger">*</span></label>
                    <input type="text" class="form-control registration-form-input" id="fullName" placeholder="Enter your full name" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="dob">Date of Birth<span class="text-danger">*</span></label>
                    <input type="date" class="form-control registration-form-input" id="dob" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="nicNumber">NIC Number<span class="text-danger">*</span></label>
                    <input type="text" class="form-control registration-form-input" id="nicNumber" placeholder="Enter your NIC number" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="address">Address<span class="text-danger">*</span></label>
                    <input type="text" class="form-control registration-form-input" id="address" placeholder="Enter your address" required>
                </div>
            </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="password">Password<span class="text-danger">*</span></label>
                        <input type="password" class="form-control registration-form-input" id="password" placeholder="Enter your password" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="confirmPassword">Confirm Password<span class="text-danger">*</span></label>
                        <input type="password" class="form-control registration-form-input" id="confirmPassword" placeholder="Confirm your password" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary registration-form-button">Create Account</button>
                <p class="already-have-account mt-3">
                    Already have an account? <a href="@Url.Action("Login", "Home")">Click here to login</a>.
                </p>
        </form>
    </div>
</section>
