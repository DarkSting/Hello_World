@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Raythos Aerospace - Manage Aircrafts Page";
}

<section>
    <div class="add-aircraft-management-container container text-center mt-4">
        <h2 class="display-4 mb-4">Manage Aircraft</h2>

        <form class="add-aircraft-form" method="post" enctype="multipart/form-data">
            <div class="row">
                <!-- Aircraft Model -->
                <div class="form-group col-md-6">
                    <label for="model" class="add-aircraft-label">Aircraft Model<span class="text-danger">*</span></label>
                    <input type="text" class="form-control add-aircraft-input" id="model" name="model" required value="Aircraft Model X">
                </div>

                <!-- Aircraft Type -->
                <div class="form-group col-md-6">
                    <label for="type" class="add-aircraft-label">Aircraft Type<span class="text-danger">*</span></label>
                    <input type="text" class="form-control add-aircraft-input" id="type" name="type" required value="Aircraft Type X">
                </div>
            </div>

            <!-- Upload Images (Up to 4) -->
            <div class="form-group">
                <label for="images" class="add-aircraft-label">Upload Images (Up to 4)<span class="text-danger">*</span></label>
                <input type="file" class="form-control-file add-aircraft-input" id="images" name="images[]" multiple required>
            </div>

            <!-- Display Uploaded Images -->
            <div class="add-aircraft-uploaded-images-section">
                <div class="row">
                    <!-- Display up to 4 images -->
                    @for (int i = 0; i < 4; i++)
                    {
                        <div class="col-md-3 mb-3">
                            <div class="add-aircraft-uploaded-image-container">
                                <img src="path/to/your/uploaded/image.jpg" alt="Uploaded Image" class="img-fluid add-aircraft-uploaded-image">
                                <button type="button" class="btn btn-danger add-aircraft-delete-image-btn">Delete</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Other Fields... -->

            <!-- Customization Options -->
            <h4 class="mt-4">Customization Options</h4>

            <!-- Interior Color (Multiple Values) -->
            <div class="form-group mt-4">
                <label for="interiorColors" class="add-aircraft-label">Interior Colors</label>
                <input type="text" class="form-control add-aircraft-input" id="interiorColors" name="interiorColors" placeholder="Enter multiple colors, separated by commas" value="Color1, Color2, Color3">
            </div>

            <!-- Exterior Color (Multiple Values) -->
            <div class="form-group">
                <label for="exteriorColors" class="add-aircraft-label">Exterior Colors</label>
                <input type="text" class="form-control add-aircraft-input" id="exteriorColors" name="exteriorColors" placeholder="Enter multiple colors, separated by commas" value="Color4, Color5, Color6">
            </div>

            <!-- Custom Seat Capacity (Multiple Values) -->
            <div class="form-group">
                <label for="customSeatCapacities" class="add-aircraft-label">Custom Seat Capacities</label>
                <input type="text" class="form-control add-aircraft-input" id="customSeatCapacities" name="customSeatCapacities" placeholder="Enter multiple capacities, separated by commas" value="Capacity1, Capacity2, Capacity3">
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary add-aircraft-btn">Update Aircraft</button>
        </form>
    </div>
</section>
