@{
    Layout = "_AdminHome";
    ViewData["Title"] = "Raythos Aerospace - Administrator Login";
}

<section class="container mt-4">
    <div class="login-container text-center">
        <h2 class="display-4 mb-4">Administrator Login</h2>
        <form class="login-form">
            <div class="form-group">
                <label for="loginEmail">Email</label>
                <input type="email" class="form-control custom-input login-form-input mx-auto" id="loginEmail" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="loginPassword">Password</label>
                <input type="password" class="form-control custom-input login-form-input mx-auto" id="loginPassword" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="btn btn-primary login-form-button mx-auto">Login</button>
        </form>
    </div>
</section>
